# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /users/add                controllers.Users.add()
POST    /messages/add                controllers.Messages.add()
POST    /depots/add                controllers.Depots.add()
POST    /actualites/add                controllers.Actualites.add()

POST    /users/getContacts                controllers.Users.getContacts()
POST    /messages/getAll                controllers.Messages.getAll()
POST    /depots/getAll                controllers.Depots.getAll()
POST    /actualites/getAll                controllers.Actualites.getAll()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
